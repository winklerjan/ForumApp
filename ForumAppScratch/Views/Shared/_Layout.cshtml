@using Microsoft.AspNet.Identity;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Forum: @ViewBag.Title</title>
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width, initial-scale=1">

</head>
<body>
    <header>
        <div class="container-fluid">
            <nav class="navbar navbar-collapse navbar-toggleable-md navbar-dark bg-dark">
                <div class="container">
                    <div class="mr-auto p-2">
                        <h1><a class="navbar-brand" asp-action="index" asp-controller="forum">Forum <small>App Scratch</small></a></h1>
                    </div>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="p-2 text-light">
                            Welcome, @User.Identity.Name!
                        </div>
                        <div class="d-flex">
                            <div class="p-2">
                                <form class="form-inline my-2 my-lg-0" method="get" asp-action="userProfile" asp-controller="account" asp-route-userId="@User.Identity.GetUserId()">
                                    <button type="submit" class="alert">Profile</button>
                                </form>
                            </div>
                            <div class="p-2">
                                <form class="form-inline my-2 my-lg-0" asp-action="logout" asp-controller="account" method="post">
                                    <button class="alert" type="submit">Log Out</button>
                                </form>
                            </div>
                        </div>

                    }
                    else
                    {
                        <div class="d-flex">
                            <div class="p-2">
                                <form method="get" asp-action="login" asp-controller="account">
                                    <button class="alert">Log In</button>
                                </form>
                            </div>
                            <div class="p-2">
                                <form method="get" asp-action="register" asp-controller="account">
                                    <button class="alert">Sign Up</button>
                                </form>
                            </div>
                        </div>
                    }
                </div>
            </nav>
        </div>
    </header>
    <main>
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
</body>
</html>
