@using Microsoft.AspNet.Identity;

@{
    Layout = "_Layout";
    ViewBag.Title = "New Topic";
}
@model ForumAppScratch.ViewModels.ForumViewModel

    <br />
<form asp-action="newTopic" method="post">
    <div>
        <input type="hidden" name="authorId" value="@User.Identity.GetUserId()" />
    </div>
    <div>
        <label for="name">Name: </label>
        <input type="text" id="name" name="name" required />
    </div>
    
    <div>
        <button class="btn btn-dark" type="submit">Add topic</button>
    </div>
</form>